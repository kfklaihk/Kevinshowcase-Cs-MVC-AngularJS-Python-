                    <th>Remark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.txModels)
                {
                    <tr>
                        <td>@item.datetme</td>
                        <td>@item.hrmmtme</td>
                        <td>@item.buysell</td>
                        <td>@item.Stklist.stkcode</td>
                        <td>@item.Stklist.name</td>
                        <td>@item.shares</td>
