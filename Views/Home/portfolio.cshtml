    </div>

    <div id="pending_tx">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Buy/Sell</th>
                    <th>Stock Code</th>
                    <th>Stock Name</th>
                    <th>No. of Shares</th>
                    <th>Currency</th>

                    <th>Order Price</th>
                    <th>Remark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Pending_txModels)
                {
                    <tr>
                        <td>@item.datetme</td>
                        <td>@item.hrmmtme</td>
                        <td>@item.buysell</td>
                        <td>@item.Stklist.stkcode</td>
                        <td>@item.Stklist.name</td>
                        <td>@item.shares</td>
                        <td>@item.Stklist.currency</td>

                        <td>@item.price</td>
                        <td>@item.remark</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
